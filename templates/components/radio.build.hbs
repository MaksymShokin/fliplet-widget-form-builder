  <template v-for="(option, index) in options">
    <div class="radio radio-icon">
      <input
        type="radio"
        :id="name + '-' + index"
        :name="name"
        v-model="value"
        :value="option.id || option.label">
      <label v-on:click="clickHandler(option)">
        <span class="check"><i class="fa fa-circle"></i></span>
        <span class="check-option">\{{ option.label || option.id }}</span>
      </label>
    </div>
  </template>
