<div v-if="description" class="help-block description">\{{ description }}</div>
<template v-if="autofill === 'always' && defaultSource === 'submission' && empty">
  Now
</template>
<template v-else>
  <div class="input-group custom-time">
    <div class="input-group-addon">
      <i class="fa fa-clock-o"></i>
    </div>

    <input
      type="time"
      v-model.lazy="value"
      v-on:change="updateValue()"
      v-on:input="onInput($event)"
      :name="name"
      :id="name"
      :placeholder="placeholder"
      class="form-control"
    />
  </div>
</template>  

<p class="text-danger" v-if="$v.value.required === false && $v.value.$dirty">Field is required.</p>
